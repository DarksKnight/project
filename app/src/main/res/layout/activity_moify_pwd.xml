<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_moify_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.express56.xq.activity.ModifyPwdActivity">

    <RelativeLayout
        android:id="@+id/modify_pwd_title_part"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/title">

        <ImageView
            android:id="@+id/modify_pwd_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_title_modify_pwd"
            android:textColor="@color/white"
            android:textSize="@dimen/font_content_size_3" />

    </RelativeLayout>

    <View
        android:id="@+id/modify_pwd_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/modify_pwd_title_part"
        android:background="#d3d4d8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modify_pwd_1"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/modify_pwd_old_pwd_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_page_input_height_new"
            android:layout_marginLeft="@dimen/login_page_margin_new"
            android:layout_marginRight="@dimen/login_page_margin_new"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_input_with_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/modify_pwd_editText_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="原密码"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_login_view_text_hint"
                android:textSize="@dimen/font_content_size_4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/modify_pwd_new_password_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_page_input_height_new"
            android:layout_below="@id/modify_pwd_old_pwd_part"
            android:layout_marginLeft="@dimen/login_page_margin_new"
            android:layout_marginRight="@dimen/login_page_margin_new"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_login_input_with_corner"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/modify_pwd_editText_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:hint="新密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_login_view_text_hint"
                android:textSize="@dimen/font_content_size_4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/modify_pwd_repeat_password_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_page_input_height_new"
            android:layout_below="@id/modify_pwd_new_password_part"
            android:layout_marginLeft="@dimen/login_page_margin_new"
            android:layout_marginRight="@dimen/login_page_margin_new"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_login_input_with_corner"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/modify_pwd_editText_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:hint="新密码确认"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_login_view_text_hint"
                android:textSize="@dimen/font_content_size_4" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_page_input_height_new"
            android:layout_below="@id/modify_pwd_repeat_password_part"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/login_page_margin_new"
            android:layout_marginRight="@dimen/login_page_margin_new"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="提&#160;交"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_content_size_4" />


    </RelativeLayout>

</RelativeLayout>