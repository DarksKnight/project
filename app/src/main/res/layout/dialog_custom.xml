<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_custom_dialog">

    <!--<TextView-->
        <!--android:id="@+id/title_part"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:text=""-->
        <!--android:textColor="@color/color_bike_position_bg"-->
        <!--android:textSize="@dimen/font_content_size_1" />-->

    <TextView
        android:id="@+id/prompt_str_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_part"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:lineSpacingExtra="3dp"
        android:maxLines="3"
        android:textColor="@color/color_dialog_btn_left_text"
        android:textSize="@dimen/font_content_size_3" />
    <!--android:lineSpacingMultiplier="1.5"-->

    <View
        android:id="@+id/seperator_line"
        style="@style/list_item_seperator_layout"
        android:layout_below="@id/prompt_str_part" />

    <LinearLayout
        android:id="@+id/control_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seperator_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/bg_btn_dialog_left"
            android:textSize="@dimen/font_content_size_3"
            android:visibility="visible" />

        <View style="@style/list_item_cell_seperator_layout" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/bg_btn_dialog_right"
            android:textSize="@dimen/font_content_size_3" />

    </LinearLayout>

</RelativeLayout>
