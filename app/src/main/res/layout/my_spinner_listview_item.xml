<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_select_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/my_spinner_listView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left_1"
        android:src="@drawable/icon_select_unselect_normal" />

    <TextView
        android:id="@+id/my_spinner_listView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        android:layout_marginLeft="@dimen/margin_left_1"
        android:singleLine="true"
        android:textColor="#8B8B8B"
        android:textSize="@dimen/font_content_size_4" />
</LinearLayout>