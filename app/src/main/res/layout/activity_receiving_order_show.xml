<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_bg">

    <RelativeLayout
            android:id="@+id/search_title_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title"
            android:background="@color/color_title_bg">

        <ImageView
                android:id="@+id/search_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:src="@drawable/btn_back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_title_receive_order_show_edit"
                android:textColor="@color/color_view_title_text"
                android:textSize="@dimen/font_content_size_2"/>

    </RelativeLayout>

    <View
            android:id="@+id/search_line_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/search_title_part"
            android:background="#d3d4d8"/>

    <ScrollView
            android:layout_below="@id/search_line_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="单号："
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                        <TextView
                                android:id="@+id/tv_receive_order_show_show_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="16sp"
                              android:textColor="@color/black"
                              android:text="订单时间："/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_create_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2016-01-01 17:00"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:id="@+id/tv_receive_order_show_get_item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取件时间："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_serviceTime"
                            android:layout_toRightOf="@id/tv_receive_order_show_get_item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_offer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5个报价"
                            android:textSize="16sp"
                            android:textColor="@color/color_red"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递信息"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:visibility="gone"/>

            <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/tv_receive_order_show_edit_express_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递公司："
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                <TextView
                        android:id="@+id/tv_receive_order_show_show_company"
                        android:layout_toRightOf="@id/tv_receive_order_show_edit_express_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="寄件人信息"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄件人："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄件人电话："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_sender_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发货地址："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_sender_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="江苏省苏州市"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件人信息"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收件人："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收件人电话："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_receiver_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收件人地址："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_receiver_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="江苏省苏州市"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物信息"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重量："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KG"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注："
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否保价："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_support_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否代收货款："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_support_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_receive_order_show_show_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_receive_order_show_express_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递费用"
                        android:textSize="16sp"
                        android:textColor="@color/color_red"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="10dp"
                              android:id="@+id/ll_receive_order_show_show_express_company">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快递公司："
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_express_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="顺丰"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_receive_order_show_express_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快递费："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_receive_order_express_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"
                            android:inputType="number"
                            android:text="0.0"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保价费："
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>

                    <EditText
                            android:id="@+id/et_receive_order_express_support_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"
                            android:inputType="number"
                            android:text="0.0"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_support_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_receive_order_show_show_total_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总计："
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>

                    <TextView
                            android:id="@+id/tv_receive_order_show_show_total_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"/>

                <EditText
                        android:id="@+id/et_place_order_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_login_input_with_corner"
                        android:padding="8dp"
                        android:layout_marginRight="10dp"/>

            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginTop="10dp">

                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="确定"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:id="@+id/btn_receive_order_show_show_pay"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>