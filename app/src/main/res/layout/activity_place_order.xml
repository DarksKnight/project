<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_bg">

    <RelativeLayout
            android:id="@+id/search_title_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title"
            android:background="@color/color_title_bg">

        <ImageView
                android:id="@+id/search_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:src="@drawable/btn_back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_title_place_order_edit"
                android:textColor="@color/color_view_title_text"
                android:textSize="@dimen/font_content_size_2"/>

    </RelativeLayout>

    <View
            android:id="@+id/search_line_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/search_title_part"
            android:background="#d3d4d8"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <RelativeLayout
                        android:id="@+id/rl_place_order_number_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/tv_place_order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单号：1234567890"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_place_order_createdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2016-01-01 17:00"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取件时间："
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/tv_place_order_get_item_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="选择时间"
                            android:background="@color/color_bg"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                </LinearLayout>


            </LinearLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递信息"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>


            <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <TextView
                        android:id="@+id/tv_place_order_edit_express_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递公司："
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                <Spinner
                        android:id="@+id/sp_place_order_edit_express_company"
                        android:layout_toRightOf="@id/tv_place_order_edit_express_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_bg"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_place_order_express_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="快递单号：1234567890"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="寄件人信息"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄件人："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_sender_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄件人电话："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_sender_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"/>

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:id="@+id/tv_place_order_sender_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在地区："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <LinearLayout
                            android:id="@+id/ll_place_order_sender"
                            android:layout_toRightOf="@id/tv_place_order_sender_address"
                            android:layout_alignTop="@id/tv_place_order_sender_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_place_order_send_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请选择"
                                android:textSize="16sp"
                                android:textColor="@color/color_red"/>

                        <Button
                                android:id="@+id/btn_place_order_send_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="编辑"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"
                                android:background="@color/color_bg"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/ll_place_order_sender"
                            android:gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="详细地址："/>

                        <EditText
                                android:id="@+id/et_place_order_sender_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:background="@color/color_bg"
                                android:padding="8dp"
                                android:hint="街道、楼牌号等"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件人信息"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收件人："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_receiver_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收件人电话："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_receiver_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"/>

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:id="@+id/tv_place_order_receiver_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在地区："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <LinearLayout
                            android:id="@+id/ll_place_order_receiver"
                            android:layout_toRightOf="@id/tv_place_order_receiver_address"
                            android:layout_alignTop="@id/tv_place_order_receiver_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_place_order_get_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请选择"
                                android:textSize="16sp"
                                android:textColor="@color/color_red"/>

                        <Button
                                android:id="@+id/btn_place_order_get_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="编辑"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:background="@color/color_bg"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/ll_place_order_receiver"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="详细地址："/>

                        <EditText
                                android:id="@+id/et_place_order_receiver_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:padding="8dp"
                                android:background="@color/color_bg"
                                android:hint="街道、楼牌号等"/>


                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否到付："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <Spinner
                            android:id="@+id/sp_place_order_arrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_bg"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物信息"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_red"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重量："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <com.express56.xq.widget.WeightChoose
                            android:id="@+id/wc_place_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KG"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="备注："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否保价："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <Spinner
                            android:id="@+id/sp_place_order_support_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_bg"/>

                    <LinearLayout
                            android:id="@+id/ll_place_order_support_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                        <EditText
                                android:id="@+id/et_place_order_support_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:background="@drawable/bg_login_input_with_corner"
                                android:padding="8dp"
                                android:text="0.0"
                                android:inputType="number"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否代收货款："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <Spinner
                            android:id="@+id/sp_place_order_support_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_bg"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <LinearLayout
                            android:id="@+id/ll_place_order_support_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                        <EditText
                                android:id="@+id/et_place_order_support_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:background="@drawable/bg_login_input_with_corner"
                                android:padding="8dp"
                                android:text="0.0"
                                android:inputType="number"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/ll_place_order_money"
                          android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递费用"
                        android:textSize="16sp"
                        android:textColor="@color/color_red"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快递费："
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/et_place_order_express_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"
                            android:inputType="number"
                            android:text="0.0"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保价费："
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="20dp"/>

                    <EditText
                            android:id="@+id/et_place_order_express_support_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"
                            android:inputType="number"
                            android:text="0.0"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">


                    <TextView
                            android:id="@+id/tv_place_order_total_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="总计：10元"
                            android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述："
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"/>

                    <EditText
                            android:id="@+id/et_place_order_express_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@drawable/bg_login_input_with_corner"
                            android:padding="8dp"
                            android:layout_marginRight="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">

                <Button
                        android:id="@+id/btn_place_order_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存"
                        android:layout_marginRight="10dp"/>

                <Button
                        android:id="@+id/btn_place_order_save_release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存并发布"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.express56.xq.widget.ChoosePlaceLayout
            android:id="@+id/cpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

</RelativeLayout>