<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_bottom"
    android:paddingLeft="@dimen/margin_left"
    android:paddingTop="@dimen/margin_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView android:id="@+id/listview_item_bike_site_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/harborlist_icon_harborpoint_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview_item_bike_site_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_bike_site_type_text"
                android:textSize="@dimen/font_content_size_2_1" />

            <TextView
                android:id="@+id/listview_item_bike_site_rent_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/bike_site_type_text_padding_bottom"
                android:paddingTop="@dimen/bike_site_type_text_padding_top"
                android:textColor="@color/color_bike_site_type_text"
                android:textSize="@dimen/font_content_size_4" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>