<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_custom_dialog">

    <EditText
        android:id="@+id/editText_express_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_part"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:hint="请输入正确的单号"
        android:lineSpacingExtra="3dp"
        android:maxLines="1"
        android:textColor="@color/color_dialog_btn_left_text"
        android:textSize="@dimen/font_content_size_3" />
    <!--android:lineSpacingMultiplier="1.5"-->

    <View
        android:id="@+id/seperator_line"
        style="@style/list_item_seperator_layout"
        android:layout_below="@id/editText_express_no" />

    <LinearLayout
        android:id="@+id/control_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seperator_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/str_dialog_btn_cancel"
            android:textColor="@drawable/bg_btn_dialog_left"
            android:textSize="@dimen/font_content_size_3"
            android:visibility="visible" />

        <View style="@style/list_item_cell_seperator_layout" />

        <TextView
            android:id="@+id/input_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/str_dialog_btn_to_ok"
            android:textColor="@drawable/bg_btn_dialog_right"
            android:textSize="@dimen/font_content_size_3" />

    </LinearLayout>

</RelativeLayout>
