<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_main_part"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_image_bg"
    tools:context="com.express56.xq.fragment.PersonalFragment">

    <RelativeLayout
        android:id="@+id/personal_title_part"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/color_title_bg">

        <TextView
            android:id="@+id/title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_title_personal"
            android:textColor="@color/color_view_title_text"
            android:textSize="@dimen/font_content_size_3" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/personal_title_part"
        android:background="#d3d4d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_title_part"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="40dp">

                <ImageView android:id="@+id/my_personal_imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_head" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp">

                    <TextView
                        android:id="@+id/textView_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_content_size_3" />

                    <TextView
                        android:id="@+id/textView_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_nickname"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="账户&#160;&#160;%1$s"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_content_size_3" />

                    <TextView
                        android:id="@+id/btn_modify_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_account"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:paddingBottom="4dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="20dp"
                        android:paddingTop="4dp"
                        android:text="修改密码"
                        android:visibility="gone"
                        android:textColor="@drawable/text_color_btn"
                        android:textSize="@dimen/font_content_size_4_1" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="普通账户"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />

            <TextView
                android:id="@+id/accout_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="信用账户"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />

            <TextView
                android:id="@+id/accout_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="信用额度"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />

            <TextView
                android:id="@+id/accout_credit_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="分期账户"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />

            <TextView
                android:id="@+id/accout_installment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_content_size_4" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_page_input_height_new"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#FF0000"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:paddingTop="6dp"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/font_content_size_4" />

</RelativeLayout>
