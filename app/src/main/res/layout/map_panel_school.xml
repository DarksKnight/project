<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_panel_school_part"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_location_panel"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/school_area_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FF8B00"
        android:textSize="@dimen/font_content_size_2_1" />

    <TextView
        android:id="@+id/bike_site_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_area_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textColor="#8B8B8B"
        android:textSize="@dimen/font_content_size_4" />

    <LinearLayout
        android:id="@+id/division_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#D3D4D8"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/to_bike_site_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/str_panel_to_bike_site_mode"
            android:textColor="@drawable/btn_school_map_panel_btn_text_color"
            android:textSize="@dimen/font_content_size_4" />

        <TextView
            android:id="@+id/to_school_detail_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/str_panel_to_school_detail_view"
            android:textColor="@drawable/btn_school_map_panel_btn_text_color"
            android:textSize="@dimen/font_content_size_4" />
    </LinearLayout>


</LinearLayout>