<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp">

    <com.express56.xq.widget.CustomImageView
        android:id="@+id/head_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        bms:src="@drawable/menu_top_head"
        bms:type="circle" />

    <TextView android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/str_nickname"
        android:textSize="@dimen/font_content_size_2_1"
        android:textColor="#7B7B7B" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D4D8"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"/>

</LinearLayout>